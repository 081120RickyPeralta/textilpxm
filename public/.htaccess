# Configuración básica del servidor web
# Configuración para URLs amigables

# Activar el motor de reescritura
RewriteEngine On

# Prevenir acceso a archivos sensibles
RewriteRule ^config/ - [F,L]
RewriteRule ^\. - [F,L]
RewriteRule ^composer\.json$ - [F,L]
RewriteRule ^composer\.lock$ - [F,L]
RewriteRule \.git - [F,L]
RewriteRule \.env - [F,L]

# Redirigir todas las solicitudes a index.php (excepto archivos y directorios existentes)
# Evitar bucle infinito: no reescribir si ya es index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/.*index\.php [NC]
RewriteCond %{REQUEST_URI} !^/.*\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$ [NC]
RewriteRule ^(.*)$ index.php?path=$1 [L,QSA]

# Opciones de seguridad
Options -Indexes
ServerSignature Off

# Cabeceras de seguridad
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>